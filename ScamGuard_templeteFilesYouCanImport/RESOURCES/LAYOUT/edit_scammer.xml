<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    android:background="@color/colorGrayWhite">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:id="@+id/NameField2"
            android:layout_marginBottom="10dp">
            <TextView
                android:text="Scammer Username"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtUsername2" />
            <EditText
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtUsername2" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/NameField2"
            android:id="@+id/EmailField2"
            android:layout_marginBottom="10dp">
            <TextView
                android:text="Scammer Email"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtEmail2" />
            <EditText
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtEmail2"
                android:singleLine="true" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/EmailField2"
            android:id="@+id/PhoneField2"
            android:layout_marginBottom="10dp">
            <TextView
                android:text="Scammer Phone"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPhone2" />
            <EditText
                android:inputType="none|phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtPhone2"  />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PhoneField2"
            android:id="@+id/WebsiteField2"
            android:layout_marginBottom="10dp">
            <TextView
                android:text="Scammer Website or Profile URL"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtWebsite2" />
            <EditText
                android:inputType="none|textWebEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtWebsite2" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/WebsiteField2"
            android:id="@+id/SeverityField2"
            android:layout_marginBottom="20dp">
            <TextView
                android:text="Scam Severity"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView2"
                android:layout_marginBottom="10dp" />
            <RadioGroup
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/RbtnGroup2">
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Critical"
                    android:id="@+id/RbtnCritical2"
                    android:layout_weight="1"
                    android:background="@color/colorWarning" />
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="High"
                    android:id="@+id/RbtnHigh2"
                    android:layout_weight="1"
                    android:background="@color/colorOrange" />
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Medium"
                    android:id="@+id/RbtnMedium2"
                    android:layout_weight="1"
                    android:background="@color/colorYellow" />
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Low"
                    android:id="@+id/RbtnLow2"
                    android:layout_weight="1"
                    android:background="@color/colorGreen" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/SeverityField2"
            android:id="@+id/DescriptionField2"
            android:layout_marginBottom="20dp">
            <TextView
                android:text="Your experience with the scam"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtDescription2" />
            <EditText
                android:inputType="none|textMultiLine|textAutoCorrect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtDescription2" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/DescriptionField2"
            android:id="@id/ButtonField">
            <Button
                android:text="Save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnSave" />
            <Button
                android:text="Cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnCancel2" />
            <Button
                android:text="Delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnDelete" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
